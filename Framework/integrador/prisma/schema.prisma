generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model user {
  id Int @id @unique @default(autoincrement())

  name String?
  email String @unique
  password String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  ratings rating[]
}

model movie {
  id Int @id @unique @default(autoincrement())

  name String @unique
  description String
  studio String
  releaseDate String
  streaming String
  ageRating String
  duration String
  rating Float @default(0)
  imgURL String?
  videoURL String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  ratings rating[]
}


model rating {
  id Int @id @unique @default(autoincrement())

  value Int
  comment String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  userId Int
  movieId Int

  user user @relation(fields: [userId], references: [id])
  movie movie @relation(fields: [movieId], references: [id])
}